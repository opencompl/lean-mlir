-/
def srem? {w : Nat} (x y : Bitvec w) : Option $ Bitvec w :=
  if y.toInt = 0
  then none
  else
    let div := (x.toInt / y.toInt)
    if div < 2^w
      then some $ Bitvec.ofInt w (x.toInt.rem y.toInt)
      else none

